<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailySchedulePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/sunrisebutton"
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/wakeupbutton"
            app:srcCompat="@drawable/ic_group_36_3"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="87dp" />

        <ImageButton
            android:id="@+id/wakeupbutton"
            android:layout_width="360dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/sunrisebutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/yogatimebutton"
            app:srcCompat="@drawable/ic_group_38"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="116dp" />

        <ImageButton
            android:id="@+id/yogatimebutton"
            android:layout_width="360dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/wakeupbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/breakfastbutton"
            app:srcCompat="@drawable/ic_group_39"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="116dp" />

        <ImageButton
            android:id="@+id/breakfastbutton"
            android:layout_width="360dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/yogatimebutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lunchbutton"
            app:srcCompat="@drawable/ic_group_40"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="175dp" />

        <ImageButton
            android:id="@+id/lunchbutton"
            android:layout_width="360dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/breakfastbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/snacksbutton"
            app:srcCompat="@drawable/ic_group_41"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="57dp" />
        <ImageButton
            android:id="@+id/snacksbutton"
            android:layout_width="360dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/lunchbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_group_42" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>